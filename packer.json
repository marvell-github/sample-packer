{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y nginx",
        "echo 'Hello, World!' > /var/www/html/index.html"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "my-docker-image",
      "tag": "v1.0.0"
    }
  ]
}
