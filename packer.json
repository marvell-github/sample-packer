packer {
  required_plugins {
    docker = {
      source  = "github.com/hashicorp/docker"
      version = "~> 1"
    }
  }
}

source "docker" "example" {
  image = "ubuntu:20.04"
}

build {
  sources = [
    "source.docker.example"
  ]

  provisioner "shell" {
    inline = [
      "apt-get update",
      "apt-get install -y nginx",
      "echo 'Hello, World!' > /var/www/html/index.html"
    ]
  }

  post-processor "docker-tag" {
    repository = "my-docker-image"
    tag        = "v1.0.0"
  }
}
